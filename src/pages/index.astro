---
import { getCollection } from 'astro:content';
import { GameWrapper } from '@/components/GameWrapper';
import '@/styles/global.css';

const pcParts = await getCollection('pc_parts');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>PC Parts Card Game</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Hack+Nerd+Font:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body class="min-h-screen bg-gradient-to-br from-amber-100 via-orange-50 to-yellow-100">
		<header class="text-center py-16 px-8 text-amber-900">
			<h1 class="text-5xl font-bold mb-4">Welcome to PC Parts Guessing Game</h1>
			<p class="text-xl opacity-80">Reveal the hidden cards by entering your guess below</p>
		</header>
		
		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
			<div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl border border-amber-200/50 p-4 sm:p-6 lg:p-8 -mt-8">
				<GameWrapper pcParts={pcParts} client:load />
			</div>
		</main>
	</body>
</html>
