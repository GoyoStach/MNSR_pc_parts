---
import { getCollection } from 'astro:content';
import { CardGame } from '@/components/CardGame';
import '@/styles/global.css';

const pcParts = await getCollection('pc_parts');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>PC Parts Card Game</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Hack+Nerd+Font:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body class="min-h-screen bg-gradient-to-br from-amber-100 via-orange-50 to-yellow-100">
		<header class="text-center py-16 px-8 text-amber-900">
			<h1 class="text-5xl font-bold mb-4">Welcome to PC Parts Guessing Game</h1>
			<p class="text-xl opacity-80">Reveal the hidden cards by entering your guess below</p>
		</header>
		
		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
			<div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl border border-amber-200/50 p-4 sm:p-6 lg:p-8 -mt-8">
				<CardGame pcParts={pcParts} client:load />
				
				<div class="text-center mt-6 lg:mt-8">
					<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
						<input 
							type="text" 
							id="gameInput" 
							placeholder="Enter PC part name..."
							class="px-4 py-3 text-base lg:text-lg border-2 border-amber-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400 focus:border-amber-400 w-full max-w-sm lg:max-w-md bg-white/80"
						/>
						<button 
							id="submitBtn"
							class="px-6 py-3 text-base lg:text-lg bg-amber-600 hover:bg-amber-700 text-white font-semibold rounded-lg transition-all duration-200 hover:scale-105 hover:shadow-lg active:scale-95 w-full sm:w-auto"
						>
							Submit
						</button>
					</div>
				</div>
			</div>
		</main>
	</body>
</html>
